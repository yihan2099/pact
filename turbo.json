{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:contracts": {
      "cache": true,
      "inputs": ["apps/contracts/src/**/*.sol", "apps/contracts/foundry.toml"],
      "outputs": ["apps/contracts/out/**", "apps/contracts/abis/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:mcp": {
      "cache": false,
      "persistent": true
    },
    "dev:indexer": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "eslint.config.*"]
    },
    "lint:fix": {
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "eslint.config.*"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "__tests__/**", "*.test.ts", "*.spec.ts"]
    },
    "test:contracts": {
      "cache": true,
      "inputs": ["apps/contracts/src/**/*.sol", "apps/contracts/test/**/*.sol"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "db:migrate": {
      "cache": false
    }
  }
}
