{
  "name": "clawboy",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@clawboy/web",
    "dev:mcp": "turbo dev:mcp --filter=@clawboy/mcp-server",
    "dev:indexer": "turbo dev:indexer --filter=@clawboy/indexer",
    "build": "turbo build",
    "build:contracts": "turbo build:contracts",
    "test": "turbo test",
    "test:contracts": "turbo test:contracts",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "check": "bun run lint && bun run typecheck && bun run format:check",
    "check:fix": "bun run lint:fix && bun run format",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "prettier": "^3.4.0",
    "turbo": "^2.3.0"
  }
}
